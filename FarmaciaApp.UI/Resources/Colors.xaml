<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<!-- Colores principales -->
	<Color x:Key="PrimaryColor">#0984e3</Color>
	<Color x:Key="SecondaryColor">#74b9ff</Color>
	<Color x:Key="AccentColor">#6c5ce7</Color>

	<!-- Colores neutros -->
	<Color x:Key="LightGrayColor">#f5f6fa</Color>
	<Color x:Key="DarkGrayColor">#2d3436</Color>

	<!-- Brushes -->
	<SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
	<SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}" />
	<SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
	<SolidColorBrush x:Key="LightGrayBrush" Color="{StaticResource LightGrayColor}" />
	<SolidColorBrush x:Key="DarkGrayBrush" Color="{StaticResource DarkGrayColor}" />

</ResourceDictionary>
