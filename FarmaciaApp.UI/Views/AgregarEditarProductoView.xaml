<Window x:Class="FarmaciaApp.UI.Views.AgregarEditarProductoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Agregar/Editar Cliente" 
        Height="550" Width="400"
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <TextBlock Text="Nombre"/>
                <TextBox Text="{Binding Form.PerNombre, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,15"/>

                <TextBlock Text="Apellido"/>
                <TextBox Text="{Binding Form.PerApellido, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,15"/>

                <TextBlock Text="Direccion"/>
                <TextBox Text="{Binding Form.PerDireccion, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,15"/>

                <TextBlock Text="Telefono"/>
                <TextBox Text="{Binding Form.PerTelefono, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,15"/>

                <TextBlock Text="Email"/>
                <TextBox Text="{Binding Form.PerEmail, UpdateSourceTrigger=PropertyChanged}" Margin="0,5,0,15"/>

            </StackPanel>
        </ScrollViewer>

        <TextBlock Grid.Row="1" 
                   Text="{Binding ErrorMessage}" 
                   Foreground="Red" 
                   FontWeight="SemiBold" 
                   TextWrapping="Wrap"
                   Margin="0,5,0,5"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Guardar" Width="100" Margin="5" Command="{Binding SaveCommand}" />
            <Button Content="Cancelar" Width="100" Margin="5" Command="{Binding CancelCommand}" />
        </StackPanel>

    </Grid>
</Window>