<UserControl x:Class="FarmaciaApp.UI.Views.ProductosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<Grid Background="White" Margin="20">

		<StackPanel>
			<TextBlock Text="Gestión de Productos"
                       FontSize="28"
                       FontWeight="Bold"
                       Margin="0 0 0 20"/>

			<StackPanel Orientation="Horizontal" Margin="0 0 0 10">
				<Button Content="Agregar Producto" Width="160" Height="35" Margin="0,0,10,0"
                        Command="{Binding AgregarCommand}" />
				<Button Content="Editar" Width="100" Height="35" Margin="0,0,10,0"
                        Command="{Binding EditarCommand}" />
				<Button Content="Eliminar" Width="100" Height="35" Margin="0,0,10,0"
                        Command="{Binding EliminarCommand}" />
				<Button Content="Actualizar" Width="100" Height="35" Margin="0,0,10,0"
                        Command="{Binding RefreshCommand}" />
				<TextBox Width="240" Margin="10,0,0,0" VerticalAlignment="Center"
                         Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}" />
				<Button Content="Buscar" Width="90" Margin="10,0,0,0" Command="{Binding BuscarCommand}" />
			</StackPanel>

			<DataGrid ItemsSource="{Binding Productos}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      Margin="0 10 0 0"
                      Height="400"
                      SelectedItem="{Binding Seleccionado, Mode=TwoWay}" SelectionChanged="DataGrid_SelectionChanged">

				<DataGrid.Columns>
					<DataGridTextColumn Header="ID" Binding="{Binding ProId}" Width="80"/>
					<DataGridTextColumn Header="Nombre" Binding="{Binding ProNombre}" Width="200"/>
					<DataGridTextColumn Header="Precio" Binding="{Binding ProPrecio}" Width="100"/>
					<DataGridTextColumn Header="Stock" Binding="{Binding ProStock}" Width="80"/>
					<DataGridTextColumn Header="Descripción" Binding="{Binding ProDescripcion}" Width="*"/>
				</DataGrid.Columns>
			</DataGrid>
		</StackPanel>

	</Grid>
</UserControl>
