<Window x:Class="FarmaciaApp.UI.Views.AgregarEditarPromocionView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding Titulo}"
        Height="450"
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Titulo -->
        <TextBlock Text="{Binding Titulo}"
                   FontSize="22"
                   FontWeight="Bold"
                   Margin="0 0 0 20"
                   Grid.Row="0"/>

        <!-- Formulario -->
        <StackPanel Grid.Row="1">
            <TextBlock Text="Descripcion:" FontWeight="SemiBold" Margin="0 5"/>
            <TextBox Text="{Binding Descripcion, UpdateSourceTrigger=PropertyChanged}"
                     Height="30" FontSize="14"/>

            <TextBlock Text="Descuento (%):" FontWeight="SemiBold" Margin="0 10 0 5"/>
            <TextBox Text="{Binding Descuento, UpdateSourceTrigger=PropertyChanged}"
                     Height="30" FontSize="14"/>

            <TextBlock Text="Fecha Inicio:" FontWeight="SemiBold" Margin="0 10 0 5"/>
            <DatePicker SelectedDate="{Binding FechaInicio}"
                        Height="30" FontSize="14"/>

            <TextBlock Text="Fecha Fin:" FontWeight="SemiBold" Margin="0 10 0 5"/>
            <DatePicker SelectedDate="{Binding FechaFin}"
                        Height="30" FontSize="14"/>
        </StackPanel>

        <!-- Botones -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0 20 0 0">
            <Button Content="Guardar" Width="100" Height="35" Margin="0 0 10 0"
                    Command="{Binding GuardarCommand}"/>
            <Button Content="Cancelar" Width="100" Height="35"
                    Command="{Binding CancelarCommand}"/>
        </StackPanel>
    </Grid>
</Window>