<UserControl x:Class="FarmaciaApp.UI.Views.ClientesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White">

	<Grid Margin="20">
		
		<StackPanel>
			<TextBlock Text="Gestión de Clientes"
                       FontSize="28"
                       FontWeight="Bold"
                       Margin="0 0 0 20"/>

			<StackPanel Orientation="Horizontal" Margin="0 0 0 10">

				<Button Content="Agregar Cliente" Width="160" Height="35" Margin="0,0,10,0"
                        Command="{Binding AgregarCommand}" />
				<Button Content="Editar" Width="100" Height="35" Margin="0,0,10,0"
                        Command="{Binding EditarCommand}" />
				<Button Content="Eliminar" Width="100" Height="35" Margin="0,0,10,0"
                        Command="{Binding EliminarCommand}" />
				<Button Content="Actualizar" Width="100" Height="35" Margin="0,0,10,0"
                        Command="{Binding RefreshCommand}" />

				<TextBox Width="240" Margin="10,0,0,0" VerticalAlignment="Center"
                         Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}" />

				<Button Content="Buscar" Width="90" Margin="10,0,0,0"
                        Command="{Binding BuscarCommand}" />
			</StackPanel>

			<DataGrid ItemsSource="{Binding Clientes}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      Margin="0 10 0 0"
                      Height="400"
                      SelectedItem="{Binding Seleccionado, Mode=TwoWay}">

				<DataGrid.Columns>
					<DataGridTextColumn Header="ID" Binding="{Binding PerId}" Width="80"/>
					<DataGridTextColumn Header="Nombre" Binding="{Binding PerNombre}" Width="150"/>
					<DataGridTextColumn Header="Apellido" Binding="{Binding PerApellido}" Width="150"/>
					<DataGridTextColumn Header="Teléfono" Binding="{Binding PerTelefono}" Width="120"/>
					<DataGridTextColumn Header="Email" Binding="{Binding PerEmail}" Width="*"/>
					<DataGridTextColumn Header="Dirección" Binding="{Binding PerDireccion}" Width="*"/>
				</DataGrid.Columns>
			</DataGrid>
			
		</StackPanel>
		
	</Grid>
	
</UserControl>
