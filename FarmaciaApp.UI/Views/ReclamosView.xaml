<UserControl x:Class="FarmaciaApp.UI.Views.ReclamosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White">

	<Grid Margin="20">
		
		<StackPanel>
			<TextBlock Text="Gestión de Reclamos"
                       FontSize="28"
                       FontWeight="Bold"
                       Margin="0 0 0 20"/>

			<StackPanel Orientation="Horizontal" Margin="0 0 0 10">
				<Button Content="Agregar Reclamo" Width="160" Height="35" Margin="0,0,10,0"
                        Command="{Binding AgregarCommand}" />
				<Button Content="Editar" Width="100" Height="35" Margin="0,0,10,0"
                        Command="{Binding EditarCommand}" />
				<Button Content="Eliminar" Width="100" Height="35" Margin="0,0,10,0"
                        Command="{Binding EliminarCommand}" />
				<Button Content="Actualizar" Width="100" Height="35" Margin="0,0,10,0"
                        Command="{Binding RefreshCommand}" />

				<TextBox Width="240" Margin="10,0,0,0" VerticalAlignment="Center"
                         Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}" />

				<Button Content="Buscar" Width="90" Margin="10,0,0,0"
                        Command="{Binding BuscarCommand}" />
			</StackPanel>

			<DataGrid ItemsSource="{Binding Reclamos}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      Margin="0 10 0 0"
                      Height="400"
                      SelectedItem="{Binding Seleccionado, Mode=TwoWay}">

				<DataGrid.Columns>
					<DataGridTextColumn Header="ID Reclamo" Binding="{Binding RecId}" Width="100"/>
					<DataGridTextColumn Header="Fecha" Binding="{Binding RecFecha, StringFormat='dd/MM/yyyy'}" Width="120"/>
					<DataGridTextColumn Header="Cliente" Binding="{Binding ClienteNombre}" Width="200"/>
					<DataGridTextColumn Header="Factura N°" Binding="{Binding FacNumFactura}" Width="120"/>
					<DataGridTextColumn Header="Estado" Binding="{Binding RecEstado}" Width="100"/>
					<DataGridTextColumn Header="Descripción" Binding="{Binding RecDescripcion}" Width="*"/>
				</DataGrid.Columns>
				
			</DataGrid>
			
		</StackPanel>
		
	</Grid>
	
</UserControl>
