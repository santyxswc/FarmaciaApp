<UserControl x:Class="FarmaciaApp.UI.Views.ReclamosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="20">

        <StackPanel>
            <TextBlock Text="Reclamos"
                       FontSize="26"
                       FontWeight="Bold"
                       Margin="0 0 0 15"/>

            <DataGrid AutoGenerateColumns="False" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID Reclamo" Binding="{Binding RecId}"/>
                    <DataGridTextColumn Header="Factura" Binding="{Binding FacturaId}"/>
                    <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha}"/>
                    <DataGridTextColumn Header="Descripcion" Binding="{Binding Descripcion}"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>

    </Grid>
</UserControl>
