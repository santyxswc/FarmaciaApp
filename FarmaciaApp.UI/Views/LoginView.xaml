<Window x:Class="FarmaciaApp.UI.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Iniciar Sesion" 
        Height="350" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Background="#f5f6fa">
        <Border Background="White" 
                CornerRadius="10"
                Padding="20"
                Width="300"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">

            <StackPanel>
                <TextBlock Text="Farmacia - Login"
                           FontSize="22"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0 0 0 20"/>

                <TextBlock Text="Usuario" Margin="0 0 0 5"/>
                <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                         Height="30"/>

                <TextBlock Text="Contraseña" Margin="10 10 0 5"/>
                <PasswordBox x:Name="PasswordBox"
                             Height="30"/>

                <Button Content="Iniciar Sesión"
                        Margin="0 20 0 0"
                        Height="35"
                        Background="#0984e3"
                        Foreground="White"
                        Command="{Binding LoginCommand}"
                        CommandParameter="{Binding ElementName=PasswordBox}"/>

                <TextBlock Text="{Binding ErrorMessage}"
                           Foreground="Red"
                           Margin="0 10 0 0"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
